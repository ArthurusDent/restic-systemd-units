[Unit]
Description=restic check for %i

[Service]
Type=oneshot
Environment=RESTIC_LOCKFILE=/run/restic/check.lock
EnvironmentFile=-/etc/restic/restic.conf
EnvironmentFile=/etc/restic/%i/restic.conf
WorkingDirectory=/etc/restic/%i
ExecStart=/usr/bin/flock --verbose -F $RESTIC_LOCKFILE \
	/usr/local/bin/restic $RESTIC_COMMON_ARGS \
	check $RESTIC_CHECK_ARGS

[Install]
WantedBy=multi-user.target
